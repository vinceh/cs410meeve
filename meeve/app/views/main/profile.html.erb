<link rel="stylesheet" href="/css/event.css">

<div class="profile_bar_container">
	<div class="profile_bar">
		<%= image_tag("logo/meevesmaller.png", :id => "profile_logo") %>
		<div id="toolbox">
			<div id="floatleft">
					<%= form_tag( {:action => :searching}, :id => "search_form" ) do -%>
					
						<%= text_field :search, :search_input %>
						<%= submit_tag "", :id => "search_sub" %>
						
					<% end -%>	
			</div>
			<%= link_to 'Account', {:controller => :accounts, :action => :edit}, :class => "toolbar_link" %>
			<%= link_to 'Calendar', {:controller => :accounts, :action => :view_calendar}, :class => "toolbar_link" %> 
			<%= link_to 'Log out', {:controller => :main, :action => :logout}, :class => "toolbar_link" %>
		</div>
	</div>
</div>

<div class="profile_main">
	<%= render :partial => "events/event_pool" %>
	<div class="right_pool">
		<span class="main_title">following</span>
		<% @following.each do |follow| %>
			<li><%= link_to "#{follow.first_name+" "+follow.last_name}", {:controller => :accounts, :action => :friend_profile, :aid => follow.aid}, :class => "follow_friend_link" %></li>
		<% end %>
		<span class="main_title">followers</span>
		<% @followings.each do |follows| %>
			<li><%= follows.first_name %></li>
		<% end %>
	</div>
</div>

<div id="matching_results_box">
	<div id="matching_results"></div>
</div>

<span id="who_is_free">
	<%= link_to 'Who\'s free?', {:controller => :accounts, :action => :matching}, :remote => true %>
</span>
